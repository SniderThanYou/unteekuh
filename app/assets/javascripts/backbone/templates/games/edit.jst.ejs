<form id="edit-game" name="game">
  <div class="field">
    <label for="name"> name:</label>
    <input type="text" name="name" id="name" value="<%= name %>" <%if (!inPlayerSignup) { %> disabled="true" <% } %>>
  </div>

  <%if (inPlayerSignup) { %>
  <div class="actions">
    <input type="submit" value="Update Game" />
  </div>
  <% } %>
</form>

<div id="players"></div>

<%if (inPlayerSignup) { %>
<button id="add_player">I want to play</button><br>
<button id="start_game">Start game</button><br>
<% } %>

<%= current_player %>'s turn<br>
<%= state %>
<%if (state == "building_temples") {%><button id="done_building_temples">Done</button><%}%>
<%if (state == "arming") {%><button id="done_arming">Done</button><%}%>
<%if (state == "researching_techs") {%><button id="done_researching_techs">Done</button><%}%>
<%if (state == "founding_cities") {%><button id="done_founding_cities">Done</button><%}%>

<br>
<canvas id="game_board" width="1152" height="799"></canvas>
<div id="move_player_modal"></div>
